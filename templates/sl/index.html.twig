                        <img src="{{ asset('assets/images/hero-slider-12.jpg') }}" alt="image" class="img-fluid rounded-20">
                        <img src="{{ asset('assets/images/hero-slider-13.jpg') }}" alt="image" class="img-fluid rounded-20">

